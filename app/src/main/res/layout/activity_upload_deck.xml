<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_upload_deck"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context="com.example.a15017498.clashroyale2ndtime.uploadDeck">

    <include layout="@layout/toolbar_layout"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/upload1"
            android:background="@drawable/select_card"/>

        <ImageView
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/upload2"
            android:background="@drawable/select_card"/>

        <ImageView
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/upload3"
            android:background="@drawable/select_card"/>
        <ImageView
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/upload4"
            android:background="@drawable/select_card"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/upload5"
            android:background="@drawable/select_card"/>

        <ImageView
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/upload6"
            android:background="@drawable/select_card"/>

        <ImageView
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/upload7"
            android:background="@drawable/select_card"/>
        <ImageView
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/upload8"
            android:background="@drawable/select_card"/>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTitle"
        android:hint="Deck Title" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBody"
        android:hint="Deck Description" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button4" />

</LinearLayout>
